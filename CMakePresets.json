{
  "version": 3,
  "cmakeMinimumRequired": { "major": 3, "minor": 20 },
  "configurePresets": [
    {
      "name": "windows-x64-debug",
      "displayName": "Windows x64 Debug",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-win",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Debug" }
    },
    {
      "name": "armhf-cross-debug",
      "displayName": "ARMHF Cross (WSL)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-rpi",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/toolchains/armhf.cmake",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    }
  ],
  "buildPresets": [
    { "name": "win-build",   "configurePreset": "windows-x64-debug" },
    { "name": "armhf-build", "configurePreset": "armhf-cross-debug" }
  ],
  "testPresets": [
    { "name": "armhf-test",  "configurePreset": "armhf-cross-debug" }
  ]
}
